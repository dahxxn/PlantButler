<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:padding="25dp">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_marginBottom="20dp"
        android:backgroundTint="#B2D9A0"
        android:fontFamily="@font/nanumsquare_exbold"
        android:text="이전"
        android:textAlignment="center"
        android:textColor="#765D58"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/nanumsquare_exbold"
            android:textColor="@color/포인트_초록"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_exbold"
            android:text=" 님의 정원"
            android:textColor="#765D58"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/mybutton_none"
            android:orientation="vertical"
            >


            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/plant1"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/pot1"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:clickable="true" />

            </FrameLayout>


            <TextView
                android:id="@+id/plantName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumsquare_exbold"
                android:textColor="@color/포인트_갈색"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/mybutton_none"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/plant2"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/pot2"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:clickable="true" />

            </FrameLayout>


            <TextView
                android:id="@+id/plantName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumsquare_exbold"
                android:textColor="@color/포인트_갈색"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/mybutton_none"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/plant3"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/pot3"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:clickable="true" />

            </FrameLayout>


            <TextView
                android:id="@+id/plantName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumsquare_exbold"
                android:textColor="@color/포인트_갈색"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/mybutton_none"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/plant4"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/pot4"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:clickable="true" />

            </FrameLayout>


            <TextView
                android:id="@+id/plantName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumsquare_exbold"
                android:textColor="@color/포인트_갈색"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/mybutton_none"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/plant5"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/pot5"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:clickable="true" />

            </FrameLayout>


            <TextView
                android:id="@+id/plantName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumsquare_exbold"
                android:textColor="@color/포인트_갈색"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

