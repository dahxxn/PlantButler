<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="40dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/nanumsquare_exbold"
            android:text="신고"
            android:textColor="@color/포인트_노랑"
            android:textSize="25sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_exbold"
            android:text=" 하시겠습니까?"
            android:textColor="@color/포인트_갈색"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumsquare_exbold"
            android:text="신고 사유를 입력해주세요!!"
            android:textColor="@color/포인트_초록"
            android:textSize="18sp">

        </TextView>


    </LinearLayout>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/input_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="신고 사유 입력"
        android:layout_gravity="center"
        android:fontFamily="@font/nanumsquare_exbold"
        android:textColor="@color/포인트_갈색"
        android:backgroundTint="@color/포인트_갈색"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">


        <Button
            android:id="@+id/yesbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:fontFamily="@font/nanumsquare_exbold"
            android:text="확인"
            android:textColor="@color/포인트_갈색"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>