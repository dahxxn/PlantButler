<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/배경_베이지" android:gravity="center" android:orientation="vertical" android:padding="60dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="30sp"
        android:textColor="@color/포인트_갈색"
        android:fontFamily="@font/nanumsquare_exbold"/>

    <FrameLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_exbold"
            android:hint="아이디를 입력해 주세요"
            tools:ignore="TouchTargetSizeCheck"/>

        <Button
            android:id="@+id/register_idCheck"
            android:layout_width="65dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:fontFamily="@font/nanumsquare_bold"
            android:text="중복확인"
            android:textColor="@color/포인트_초록"
            tools:ignore="TouchTargetSizeCheck"
            android:onClick = "onClick"/>
    </FrameLayout>

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/포인트_갈색"
        android:fontFamily="@font/nanumsquare_bold"
        android:hint="비밀번호를 입력해 주세요"
        tools:ignore="TouchTargetSizeCheck"/>

    <FrameLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/register_passwordCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_bold"
            android:hint="비밀번호를 다시 입력하세요"
            tools:ignore="TouchTargetSizeCheck"/>
        <Button
            android:id="@+id/register_passwordCheck_btn"
            android:layout_width="54dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nanumsquare_bold"
            android:text="확인"
            android:textColor="@color/포인트_초록"
            android:onClick = "onClick"/>

    </FrameLayout>
    <EditText
        android:id="@+id/register_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumsquare_bold"
        android:hint="닉네임을 입력해 주세요"
        tools:ignore="TouchTargetSizeCheck"/>

    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumsquare_bold"
        android:hint="이메일을 입력해 주세요" tools:ignore="TouchTargetSizeCheck"/>
    <Button
        android:id="@+id/register_next_btn"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음"
        android:background="@drawable/mybutton"
        android:fontFamily="@font/nanumsquare_exbold"
        android:textColor="@color/포인트_갈색"
        android:onClick = "onClick"/>
</LinearLayout>