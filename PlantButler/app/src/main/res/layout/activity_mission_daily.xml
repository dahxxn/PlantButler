            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/mybutton_none"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
