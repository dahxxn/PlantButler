                    android:text="미션확인"
                    android:textColor="@color/brown"
                    android:textSize="20sp"
                    android:textStyle=""
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
