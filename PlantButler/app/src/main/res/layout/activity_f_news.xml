<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EfE4"
    android:orientation="vertical"
    android:padding="25dp"
    android:paddingBottom="30dp">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#B2D9A0"
        android:fontFamily="@font/nanumsquare_exbold"
        android:text="이전"
        android:textAlignment="center"
        android:textColor="#765D58"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanumsquare_exbold"
        android:text="뉴스기사"
        android:textColor="#765D58"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nanumsquare_exbold"
        android:text="환경과 관련된 뉴스를 볼 수 있어요!"
        android:textColor="#03A63C"
        android:textSize="14sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/news1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/mybutton"
            android:fontFamily="@font/nanumsquareeb"
            android:gravity="center_vertical"
            android:textColor="#765D58"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/news_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_exbold"
                android:gravity="center_vertical"
                android:textColor="#765D58"
                android:textSize="17sp"

                />

            <TextView
                android:id="@+id/news_content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumsquare"
                android:gravity="center_vertical"
                android:textColor="#765D58"
                android:textSize="16sp" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clickable="true">

        <ImageButton
            android:id="@+id/news2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/round_btn"
            android:backgroundTint="#B2D9A0"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nanumsquareeb"
            android:gravity="center_vertical"
            android:textColor="#765D58"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/news_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_exbold"
                android:gravity="center_vertical"
                android:textColor="#765D58"
                android:textSize="17sp"

                />

            <TextView
                android:id="@+id/news_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumsquare"
                android:gravity="center_vertical"
                android:textColor="#765D58"
                android:textSize="16sp" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clickable="true">

        <ImageButton
            android:id="@+id/news3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/round_btn"
            android:backgroundTint="#B2D9A0"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nanumsquareeb"
            android:gravity="center_vertical"
            android:textColor="#765D58"
            android:textSize="17sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/news_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_exbold"
                android:gravity="center_vertical"
                android:textColor="#765D58"
                android:textSize="17sp"

                />

            <TextView
                android:id="@+id/news_content3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumsquare"
                android:gravity="center_vertical"
                android:textColor="#765D58"
                android:textSize="16sp" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageButton
            android:id="@+id/news4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/round_btn"
            android:backgroundTint="#B2D9A0"
            android:clickable="true"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nanumsquareeb"
            android:gravity="center_vertical"
            android:textColor="#765D58"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/news_title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_exbold"
                android:gravity="center_vertical"
                android:textColor="#765D58"
                android:textSize="17sp"

                />

            <TextView
                android:id="@+id/news_content4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumsquare"
                android:gravity="center_vertical"
                android:textColor="#765D58"
                android:textSize="16sp" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>