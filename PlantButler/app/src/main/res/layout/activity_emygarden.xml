<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F2EFE4"
    android:orientation="vertical"
    android:padding="25dp">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#B2D9A0"
        android:fontFamily="@font/nanumsquare_exbold"
        android:text="이전"
        android:textAlignment="center"
        android:textColor="#765D58"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanumsquare_exbold"
        android:text="나만의 정원"
        android:textColor="#765D58"
        android:textSize="25sp"
       ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nanumsquare_exbold"
        android:text="식물을 눌러 보세요!"
        android:textColor="@color/포인트_초록"
        android:textSize="14sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/mybutton_none"
            >

            <ImageView
                android:id="@+id/plant1"
                android:layout_width="90dp"
                android:layout_height="120dp"></ImageView>

            <ImageView
                android:id="@+id/plant1_pot"
                android:layout_width="90dp"
                android:layout_height="120dp"></ImageView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/mybutton_none">

            <ImageView
                android:id="@+id/plant2"
                android:layout_width="90dp"
                android:layout_height="120dp"></ImageView>

            <ImageView
                android:id="@+id/plant2_pot"
                android:layout_width="90dp"
                android:layout_height="120dp"></ImageView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/mybutton_none">

            <ImageView
                android:id="@+id/plant3"
                android:layout_width="90dp"
                android:layout_height="120dp"></ImageView>

            <ImageView
                android:id="@+id/plant3_pot"
                android:layout_width="90dp"
                android:layout_height="120dp"></ImageView>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/mybutton_none">

            <ImageView
                android:id="@+id/plant4"
                android:layout_width="90dp"
                android:layout_height="120dp"></ImageView>

            <ImageView
                android:id="@+id/plant4_pot"
                android:layout_width="90dp"
                android:layout_height="120dp"></ImageView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/mybutton_none">

            <ImageView
                android:id="@+id/plant5"
                android:layout_width="90dp"
                android:layout_height="120dp"></ImageView>

            <ImageView
                android:id="@+id/plant5_pot"
                android:layout_width="90dp"
                android:layout_height="120dp"></ImageView>
        </FrameLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton_none"
            android:orientation="horizontal"
            android:padding="5dp">

            <GridLayout
                android:id="@+id/plantLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3">

            </GridLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/mybutton_none"
        android:textColor="@color/포인트_갈색"
        android:fontFamily="@font/nanumsquare_exbold"
        android:padding="10dp"
        android:text="저장"
        android:textSize="18sp" />

</LinearLayout>
